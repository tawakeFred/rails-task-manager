<h2><%= @task.title %></h2>

<h4>Details:</h4>
<p><%= @task.details %></p>
<h4>Status:</h4>
<p>
<% if @task.completed %>
      <i class="fa-regular fa-square-check fa-l"></i> Completed
    <% else %>
      <i class="fa-regular fa-square fa-l"></i> Not completed
    <% end %>
</p>
<div class="d-flex gap-2">
<%= link_to edit_task_path(@task), :class => 'btn btn-outline-danger' do %>
Edit <i class="fa-solid fa-pen-to-square"></i>
<% end %>
<%= link_to destroy_task_path(@task), data: { turbo_method: 'delete', turbo_confirm: "Delete #{@task.title}?" }, :class => 'btn btn-outline-danger' do %>
Delete <i class="fa-solid fa-trash-can"></i>
<% end %>
</div>
<div class="d-flex gap-2 mt-2">
<%= link_to tasks_path, :class => 'btn btn-outline-danger' do %>
<i class="fa-solid fa-arrow-left"></i> Go back
<% end %>
<div>
